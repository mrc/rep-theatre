(in-package #:t-rep-theatre)

(in-suite test-all)
(defsuite* misc-tests)

(deftest test-most-with-identity ()
  (let ((list '(23 5 17 58 40)))
    (multiple-value-bind (item value position)
        (most list)
      (are (= 58 item)
           (= 58 value)
           (= 3 position)))))

(deftest test-most-with-different-comparison ()
  (let ((list '(23 5 17 58 40)))
    (multiple-value-bind (item value position)
        (most list :test #'<)
      (are (= 5 item)
           (= 5 value)
           (= 1 position)))))

(deftest test-most-with-custom-key ()
  (let ((list '(23 -5 17 -58 40)))
    (multiple-value-bind (item value position)
        (most list :key #'abs)
      (are (= -58 item)
           (= 58 value)
           (= 3 position)))))
